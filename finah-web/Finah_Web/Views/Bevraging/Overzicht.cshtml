

@model IEnumerable<Finah_Web.Models.Bevraging>
@{
    Layout = "~/Views/Shared/_LayoutBeheerder.cshtml";
}
@{
    ViewBag.Title = "Bevraging - Overzicht";
}
<h3 id="Breadcrumb">Menu > Bevragingen</h3>
<h2 id="Content-Title">Overzicht</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br/>

<table class="overzicht-table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aangevraagd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Informatie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Relatie)
        </th>
        <th>
            Actie
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="DatumKolom">
                @Html.DisplayFor(modelItem => item.Aangevraagd)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Informatie)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Relatie)

            </td>

            <td class="action-column">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })  |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
